<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.rujianbin.common.web.security.dao.IUserDao" >
    <resultMap id="UserEntity" type="com.rujianbin.principal.api.entity.UserEntity" >
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="username" property="username" jdbcType="VARCHAR" />
        <result column="password" property="password" jdbcType="VARCHAR" />
        <result column="create_date" property="createDate" jdbcType="TIMESTAMP" />
    </resultMap>

    <sql id="all_column" >
        name, username,password,create_date
    </sql>

    <select id="findUser" parameterType="java.lang.String" resultMap="UserEntity">
        select id,<include refid="all_column"/> from rjb_user where username=#{username}
    </select>

</mapper>
